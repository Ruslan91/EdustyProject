<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Milestone1">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    <application
        android:hardwareAccelerated="true"
        android:theme="@android:style/Theme.Holo"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="true">
        <activity
            android:name=".AuthorizationActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserActivity"
            android:label="@string/profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupFragmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateGroupActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditGroupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OtherMainActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateJournalActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateCourseActivity"
            android:configChanges="keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyMarksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".JournalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MarksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EditMarksJournalActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".CreateMarksJournalActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LicenseActivity"
            android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>