<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        style="@style/EdustyBackground">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgUser"
            android:src="@android:drawable/ic_menu_help"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/etFirstName"
            android:layout_gravity="center"
            android:hint="@string/firstName"
            android:layout_below="@+id/imgUser"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/etLastName"
            android:layout_gravity="center"
            android:hint="@string/lastName"
            android:layout_below="@+id/etFirstName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/etMiddleName"
            android:layout_gravity="center"
            android:hint="@string/middleName"
            android:layout_below="@+id/etLastName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etBirthDate"
            android:onClick="onClickEditBirthDate"
            android:layout_gravity="center"
            android:hint="@string/birthDate"
            style="@android:style/Widget.Holo.Spinner"
            android:layout_below="@+id/etMiddleName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/etEmail"
            android:layout_gravity="center"
            android:hint="@string/eMail"
            android:layout_below="@+id/etBirthDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/etPhone"
            android:layout_gravity="center"
            android:hint="@string/phone"
            android:layout_below="@+id/etEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spCountry"
            android:layout_gravity="center"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:layout_below="@+id/etPhone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:id="@+id/etCity"
            android:layout_gravity="center"
            android:hint="@string/city"
            android:layout_below="@+id/spCountry"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_picture"
            android:id="@+id/button"
            android:layout_alignBottom="@+id/imgUser"
            android:layout_toRightOf="@+id/imgUser"
            android:background="#20ffffff"
            android:padding="5dp"
            android:onClick="onClickBtnChangePicture" />

    </RelativeLayout>
</ScrollView>